# LangGraph Self-Hosted Stack Environment Variables
# Copy this file to .env and fill in your values

# === Database Configuration ===
POSTGRES_PASSWORD=your_secure_postgres_password
POSTGRES_USER=postgres
POSTGRES_DB=postgres

# === LangSmith Configuration ===
LANGSMITH_API_KEY=your_langsmith_api_key_if_enterprise
LANGSMITH_LICENSE_KEY=your_langsmith_license_key_if_enterprise

# === LLM API Keys (loaded from secrets.yaml) ===
# These are managed by the secret management system
# Add them to envs/config/secrets.yaml as base64-encoded values
# OPENAI_API_KEY=<base64-encoded>
# ANTHROPIC_API_KEY=<base64-encoded>
# GOOGLE_API_KEY=<base64-encoded>
# GITHUB_TOKEN=<base64-encoded>

# === Optional: Additional provider keys ===
# GROK_API_KEY=<base64-encoded>
# TF_TOKEN_app_terraform_io=<base64-encoded>
# TFE_TOKEN=<base64-encoded>

# === Service Ports ===
# PostgreSQL
POSTGRES_PORT=5432

# Qdrant Vector Database
QDRANT_HTTP_PORT=6333
QDRANT_GRPC_PORT=6334

# Redis Cache
REDIS_PORT=6379

# LangSmith UI
LANGSMITH_PORT=8000

# LangGraph Server + Studio UI
LANGGRAPH_PORT=2024

# Agent Chat UI
CHAT_UI_PORT=5173

# === Service URLs (Internal) ===
POSTGRES_HOST=postgres
QDRANT_URL=http://qdrant:6333
REDIS_URL=redis://redis:6379
LANGSMITH_API_URL=http://langsmith:8000

# === Development Configuration ===
# Set to development for additional logging
ENVIRONMENT=production

# Enable debug mode for troubleshooting
DEBUG=false

# === Security Configuration ===
# Database password will be loaded from secrets.yaml if available
# Fallback to this value if secret management is not available
POSTGRES_PASSWORD_FALLBACK=postgres
